<!-- isInFolder indicates if file is in nested folder or in root folder -->

<% if(isInFolder){ %>
<form action="folders/<%= folderId %>" enctype="multipart/form-data" method="POST">
  <label for="file">Choose file</label>
  <input type="file" name="files" id="file" required multiple accept="image/*, application/pdf">
  <button type="submit">Submit</button>
</form>
<% } else{ %>
<form action="/folders" enctype="multipart/form-data" method="POST">
  <label for="file">Choose file</label>
  <input type="file" name="files" id="file" required multiple accept="image/*, application/pdf">
  <button type="submit">Submit</button>
</form>
<% }%>